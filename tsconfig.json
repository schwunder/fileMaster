{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
      "allowJs": true,
      "checkJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "bundler",
      "module": "ESNext",
      "lib": [
          "dom",
          "esnext"
      ],
      "types": [
          "svelte",
          "node",
          "playwright",
          "vitest/globals",
          "@vitest/browser",
          "@vitest/browser/providers/playwright"
      ]
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.svelte",
      "tests/**/*.ts",
      "tests/**/*.svelte"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}